<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvHomeAriticleAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="动感超人"
            />
        <TextView
            android:id="@+id/tvHomeAriticleNew"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="新"
            android:textSize="12sp"
            android:textColor="@color/lightRed"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_stroke_red"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/tvHomeAriticleAuthor"
            app:layout_constraintTop_toTopOf="@id/tvHomeAriticleAuthor"
            app:layout_constraintBottom_toBottomOf="@id/tvHomeAriticleAuthor"
             />
        <TextView
            android:id="@+id/tvHomeAriticleTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="12sp"
            android:textColor="@color/lightGreen"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_stroke_green"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/tvHomeAriticleAuthor"
            app:layout_constraintBottom_toBottomOf="@id/tvHomeAriticleAuthor"
            app:layout_constraintStart_toEndOf="@id/tvHomeAriticleNew"
            tools:text="公众号"/>
        <TextView
            android:id="@+id/tvHomeAriticleTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvHomeAriticleAuthor"
            tools:text="8小时前"/>
        <TextView
            android:id="@+id/tvHomeAriticleTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHomeAriticleAuthor"
            tools:text="面试必问的HashMap知识点，类比1.7差异分析"/>
        <TextView
            android:id="@+id/tvHomeAriticleTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginStart="8dp"
            android:text="置顶"
            android:textColor="@color/lightRed"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvHomeAriticleType"
            app:layout_constraintBottom_toBottomOf="@id/tvHomeAriticleType"/>
        <TextView
            android:id="@+id/tvHomeAriticleType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@id/tvHomeAriticleTop"
            app:layout_constraintTop_toBottomOf="@id/tvHomeAriticleTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="分类·项目"/>
        <ImageView
            android:id="@+id/imgHomeCollect"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintEnd_toEndOf="@id/tvHomeAriticleTime"
            app:layout_constraintTop_toTopOf="@id/tvHomeAriticleType"
            tools:src="@drawable/ic_collect_normal_gray"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>